<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mitsloan2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/innovatelogo"
        android:theme="@style/CustomActionBarTheme">
        <!-- android:label="@string/app_name" -->
        <!-- android:theme="@style/AppTheme" -->  
        <activity
            android:name="com.example.mitsloan2.HomeScreen"
            android:label="@string/app_name">
            <!-- android:theme="@style/Theme.AppCompat.Light" > -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mitsloan2.SpeakersActivity"
            android:label="@string/title_activity_speakers" 
            android:theme="@style/Theme.AppCompat.Light"
            android:parentActivityName="com.example.mitsloan2.HomeScreen">
        </activity>
        <activity
            android:name="com.example.mitsloan2.GridActivity"
            android:label="@string/title_activity_speakers" 
            android:theme="@style/Theme.AppCompat.Light"
            android:parentActivityName="com.example.mitsloan2.HomeScreen">
        </activity>
    </application>
    

</manifest>
